@rendermode InteractiveServer
<link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@400;700&display=swap" rel="stylesheet">

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <img src="\Treetrans.png" alt="Logo" class="logo" />
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-list-nested-nav-menu" href="" aria-hidden="true"></span> Mit stamtræ
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Aktiver">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Mine aktiver
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Arvefordeling">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Min arvefordeling
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Minbodeling">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Min bodeling
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <button class="eksportBtn" @onclick="CreatePDF">
                @BtnText
        </button>
        </div>
    </nav>
</div>


@code{
    private string BtnText = "Gem & eksporter";

    private async void CreatePDF()
    {
        BtnText = "Gemmer...";
        StateHasChanged();

        await Task.Run(() =>
        {
            PDFHelper.MakePDF();
        });

        BtnText = "Data gemt!";
        StateHasChanged();

        await Task.Delay(2500);

        BtnText = "Gem & eksporter";
        StateHasChanged();
    }
}