@page "/Aktiver"
@rendermode InteractiveServer

<link rel="stylesheet" href="Aktiver.css" />

<h3></h3>


<div class="card bg-dark text-white mb-3" style="max-width: 18rem;">
    <div class="card-header" style="font-size:30px">Dine aktiver</div>
    <div class="card-body text-white mb-3">
        <label class="text-white mb-3">Samlet formueværdi: @TotalValue</label>
        <label class="text-white mb-3">Samlet friarv: @TotalInheritance</label>
  </div>
</div>

<div class="card-footer">
    <button type="submit" @onclick="AddAsset" class="btn btn-primary btn-block">Tilføj et aktiv til din formue</button>
    <button type="submit" @onclick="Update" class="btn btn-primary btn-block">Opdater</button>
</div>

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 g-4">
        @foreach (var asset in assets)
        {
            <div class="col">
                <EditForm Model="asset">
                    <DataAnnotationsValidator />
                    <div class="card h-100" style="position: relative;">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title">Rediger Aktiv</h5>
                            <button type="button" @onclick="() => DeleteCard(asset)" class="btn-close" style="position: absolute; top: 0; right: 0; background: transparent; border: none; color: black; font-size: 1.5rem;">
                                X
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="AssetType">Vælg aktivtype</label>
                                <select @bind="asset.AssetType" class="form-control">
                                    <option value="Property">Ejendom</option>
                                    <option value="Vehicle">Køretøj</option>
                                    <option value="Item">Diverse ting</option>
                                    <option value="Stock">Værdipapirer</option>
                                    <option value="Money">Likvide midler</option>
                                </select>
                            </div>
                            @if (asset.AssetType == AssetType.Property)
                            {
                                var property = asset as Property;
                                if (property != null)
                                {
                                    <div class="form-group">
                                        <label for="Location">Addresse</label>
                                        <input type="text" id="Location" class="form-control" @bind="property.Location" />
                                    </div>
                                }
                            }

                            @if (asset.AssetType == AssetType.Vehicle)
                            {
                                var property = asset as Vehicle;
                                if (property != null)
                                {
                                    <div class="form-group">
                                        <label for="Brand">Brand</label>
                                        <input type="text" id="Brand" class="form-control" @bind="property.Brand" />
                                    </div>
                                }
                            }

                            @if (asset.AssetType == AssetType.Item)
                            {
                                var property = asset as Item;
                                if (property != null)
                                {
                                    <div class="form-group">
                                        <label for="Name">Navn</label>
                                        <input type="text" id="Name" class="form-control" @bind="property.Name" />
                                    </div>
                                }
                            }

                            @if (asset.AssetType == AssetType.Stock)
                            {
                                var property = asset as Stock;
                                if (property != null)
                                {
                                    <div class="form-group">
                                        <label for="Name">Værdipapir</label>
                                        <input type="text" id="Name" class="form-control" @bind="property.Name" />
                                    </div>
                                }
                            }
                            <div class="form-group">
                                <label for="Value">Samlet værdi</label>
                                <input type="number" id="Value" class="form-control" @bind="asset.Value" />
                            </div>
                            <div class="form-group">
                                <label for="PercentageOwned">Ejerandel i procent</label>
                                <input type="number" id="PercentageOwned" class="form-control" @bind="asset.PercentageOwned" />
                                <ValidationMessage For="@(() => asset.PercentageOwned)" />
                            </div>
                        </div>
                    </div>
                </EditForm>
            </div>
        }
    </div>
</div>


@code {
    double TotalValue = 0;
    double TotalInheritance = 0;

    void Update()
    {
        TotalValue = 0;
        TotalInheritance = 0;

        foreach(var asset in assets)
        {
            double percentageOwnedAsDecimal = asset.PercentageOwned / 100.0;

            TotalValue += asset.Value * percentageOwnedAsDecimal;
            TotalInheritance += asset.Value * percentageOwnedAsDecimal * 0.75;
        }
    }

    void DeleteCard(Asset asset)
    {
        assets.Remove(asset);
        Update();
    }

    private List<Asset> assets = AssetRepository.Instance.assets;

    private void AddAsset()
    {
        assets.Add(new Property { AssetType = AssetType.None, Value = 0, PercentageOwned = 100});
    }


}