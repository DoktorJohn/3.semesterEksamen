@page "/Aktiver"
@rendermode InteractiveServer

<link rel="stylesheet" href="Aktiver.css" />

<div class="TopBar">
    <label class="AktivTitle">Dine aktiver</label>
    <label class="text-white mb-3" style="color:#ffaa54!important; max-width: 18rem; left:57%; top:15px; position:absolute;">Samlet formueværdi: @Client.TotalValue</label>
    <label class="text-white mb-3" style="color:#ffaa54!important; max-width: 18rem; left:57%; top:40px; position:absolute;">Samlet friarvværdi: @TotalInheritance</label>

    <div class="BtnForAdd">
        <button type="submit" @onclick="AddAsset" class="btn btn-block">Tilføj et aktiv til din formue</button>
    </div>
</div>


<div class="container mt-4">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 g-4">
        @foreach (var asset in AssetRepository.Instance.assets)
        {
            <div class="col">
                <EditForm Model="asset">
                    <DataAnnotationsValidator />
                    <div class="card h-100" style="width:230px">
                        <div class="card-header bg-black text-white">
                            <button type="button" @onclick="() => DeleteCard(asset)" class="btn-close" style="position: absolute; right: 0; background: transparent; border: none; color: red; font-size: 1.5rem;">
                                X
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="AssetType">Vælg aktivtype</label>
                                <select @bind="asset.AssetType" class="form-control">
                                    <option value="Property">Ejendom</option>
                                    <option value="Vehicle">Køretøj</option>
                                    <option value="Item">Diverse ting</option>
                                    <option value="Stock">Værdipapirer</option>
                                    <option value="Money">Likvide midler</option>
                                </select>
                            </div>

                            @switch (asset.AssetType)
                            {
                                case AssetType.Property:
                                    <div class="form-group">
                                        <label for="Location">Addresse</label>
                                        <input type="text" id="Location" class="form-control" @bind="asset.Location" />
                                    </div>
                                    break;

                                case AssetType.Vehicle:

                                    <div class="form-group">
                                        <label for="Brand">Brand</label>
                                        <input type="text" id="Brand" class="form-control" @bind="asset.Brand" />
                                    </div>
                                    break;

                                case AssetType.Item:

                                    <div class="form-group">
                                        <label for="Name">Navn</label>
                                        <input type="text" id="Name" class="form-control" @bind="asset.Name" />
                                    </div>
                                    break;

                                case AssetType.Stock:
                                    <div class="form-group">
                                        <label for="Name">Værdipapir</label>
                                        <input type="text" id="Name" class="form-control" @bind="asset.Name" />
                                    </div>
                                    break;
                            }

                            <div class="form-group">
                                <label for="Value">Samlet værdi</label>
                                <input type="number" id="Value" class="form-control" @bind="asset.Value" @onblur="() => Update(asset)" />
                            </div>
                            <div class="form-group">
                                <label for="PercentageOwned">Ejerandel i procent</label>
                                <input type="number" id="PercentageOwned" class="form-control" @bind-value="asset.PercentageOwned" @onblur="() => Update(asset)" />
                                <ValidationMessage For="@(() => asset.PercentageOwned)" />
                            </div>

                            <div class="form-group">
                                <label for="HeirSelection">Tildel arving og procent</label>
                                <div class="inputgrouping">
                                    <select class="form-control" @bind="TempHeirData[asset.Id].SelectedHeirId">
                                        <option value="">Vælg arving</option>
                                        @foreach (var heir in HeirRepository.Instance.Heirs)
                                        {
                                            <option value="@heir.Id">@heir.Name</option>
                                        }
                                    </select>
                                    <input type="number" class="form-control" placeholder="Procent" min="0" max="100" @bind="TempHeirData[asset.Id].OwnershipPercentage" />
                                </div>
                                <button class="AssignBtn" @onclick="() => AssignHeirToAsset(asset)">Tildel arving</button>
                            </div>
                            
                        </div>
                    </div>
                </EditForm>
            </div>
        }
    </div>
</div>


@code {
    double TotalInheritance = Client.TotalValue * 0.75;
    int AktivCount = 0;


    private Dictionary<int, TempHeirData> TempHeirData = new Dictionary<int, TempHeirData>();

    void Update(Asset a)
    {
        Client.TotalValue = 0;

        foreach (var asset in AssetRepository.Instance.assets)
        {
            double percentageOwnedAsDecimal = asset.PercentageOwned / 100.0;

            Client.TotalValue += asset.Value * percentageOwnedAsDecimal;

            double percentageToUse = percentageOwnedAsDecimal * 0.75;
            TotalInheritance += asset.Value * percentageToUse;
        }

        TotalInheritance = Client.TotalValue * 0.75;
    }

    void DeleteCard(Asset asset)
    {
        AssetRepository.Instance.assets.Remove(asset);
        TempHeirData.Remove(asset.Id);
        Update(asset);
    }

    private void AddAsset()
    {
        AktivCount++;
        AssetRepository.Instance.assets.Add(new Asset { AssetType = AssetType.None, Value = 0, PercentageOwned = 100, Id = AktivCount});
        TempHeirData[AktivCount] = (0, 0);
    }


    private void AssignHeirToAsset(Asset asset)
    {
        var assetData = TempHeirData[asset.Id];

        if (assetData.SelectedHeirId > 0 && assetData.OwnershipPercentage > 0)
        {
            var selectedHeir = HeirRepository.Instance.Heirs.FirstOrDefault(h => h.Id == assetData.SelectedHeirId);

            if (!asset.HeirPercentage.ContainsKey(selectedHeir))
            {
                asset.HeirPercentage[selectedHeir] = assetData.OwnershipPercentage;
            }
            else
            {
                asset.HeirPercentage[selectedHeir] = assetData.OwnershipPercentage;
            }

            TempHeirData[asset.Id] = (0, 0);
        }
    }

    public class TempHeirData
    {
        public int SelectedHeirId { get; set; }
        public double OwnershipPercentage { get; set; }
    }
}